generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

enum CheckoutPaymentMethod {
  MOLLIE
  CASH
  BACS
}

enum PaymentStatus {
  UNPAID
  PENDING
  PAID
  FAILED
  EXPIRED
  CANCELED
}

/**
 * Prisma 7: do NOT define datasource.url here.
 * Datasource configuration lives in prisma.config.ts
 */

model OrderCounter {
  id   Int @id @default(1) // single row
  next Int @default(1)
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Customer / delivery
  customerName  String
  customerPhone String?
  customerEmail String?
  postcode      String
  preferredDay  String?
  deliveryNotes String?

  // Order state
  status String @default("NEW")

  // Money
  subtotalPence    Int @default(0)
  deliveryFeePence Int @default(0)
  totalPence       Int @default(0)

  // âœ… Friendly customer-facing reference
  orderNumber String? @unique

  // Payment handling
  checkoutPaymentMethod CheckoutPaymentMethod @default(BACS)
  paymentStatus         PaymentStatus         @default(UNPAID)

  molliePaymentId   String? @unique
  mollieCheckoutUrl String?
  paidAt            DateTime?

  // Relations
  items OrderItem[]

  @@index([createdAt])
  @@index([paymentStatus])
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String

  name          String
  pricePence    Int
  quantity      Int
  lineTotalPence Int @default(0)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  pricePence  Int
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  imageAlt    String?
  imageUrl    String?

  @@index([isActive, sortOrder])
}
