generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

/**
 * Prisma 7: do NOT define datasource.url here.
 * Datasource configuration lives in prisma.config.ts
 */

enum CheckoutPaymentMethod {
  MOLLIE
  CASH
  BACS
}

enum PaymentStatus {
  UNPAID
  PENDING
  PAID
  FAILED
  EXPIRED
  CANCELED
}

model OrderCounter {
  id   Int @id @default(1) // single row
  next Int @default(1)
}

model Order {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // Customer / delivery
  customerName  String
  customerPhone String?
  customerEmail String?

  // Manual address fields
  addressLine1 String?
  addressLine2 String?
  town         String?
  county       String?

  postcode      String
  preferredDay  String?
  deliveryNotes String?

  // ✅ KEEP STRING (avoid enum migration issues for now)
  // Suggested values: NEW | PAID | OFD | DELIVERED | CANCELLED
  status String @default("NEW")

  // ✅ Cancel feature
  cancelledAt  DateTime?
  cancelReason String?

  // ✅ Husbandry / admin housekeeping
  archivedAt DateTime?

  // Money
  subtotalPence    Int @default(0)
  deliveryFeePence Int @default(0)
  totalPence       Int @default(0)

  // Friendly customer-facing reference
  orderNumber String? @unique

  // Payment handling
  checkoutPaymentMethod CheckoutPaymentMethod @default(BACS)
  paymentStatus         PaymentStatus         @default(UNPAID)

  molliePaymentId   String?   @unique
  mollieCheckoutUrl String?
  paidAt            DateTime?

  // Relations
  items         OrderItem[]
  husbandryLogs HusbandryLog[]

  @@index([createdAt])
  @@index([paymentStatus])
  @@index([archivedAt])
  @@index([status])
  @@index([cancelledAt])
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  productId String

  name           String
  pricePence     Int
  quantity       Int
  lineTotalPence Int    @default(0)

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  pricePence  Int
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  imageAlt    String?
  imageUrl    String?

  @@index([isActive, sortOrder])
}

model HusbandryLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // What happened / what to remember
  note String

  // Optional: who added it (email / admin label)
  author String?

  // Optional: link to an order (so notes show on order detail)
  orderId String?
  order   Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([createdAt])
  @@index([orderId])
  @@map("husbandry_logs")
}
